extends layout

block content
	div
		form#addPost(action="/ideaPosted", method="post", placeholder='Add your ideas here...')
				input#postinput(type="text", placeholder="Add your ideas here...")
				//- input#ideaPosted.postinput(type="text", placeholder='Add your ideas here...')
				img.uploadTake(src="/img/uploadpicIcon.png", width="25px")
				input#submit1(type="submit", value="Post")
		br
		br
		br
		br
		br
		br
		br
		br
		br
		table.table2
			tr
				td
				td
				td
				td
				for publicPost in posts
					tr
						td(data-postid2=publicPost.username)
							img.favorite(src='/img/favoriteIcon.png', data-postid=publicPost._id, data-cont=publicPost.contents)
						td(data-postid2=publicPost.username)
							img(src="/img/votearrow.jpg" alt="" usemap='#'+publicPost._id)
							map(name=publicPost._id id=publicPost._id)
								area(alt="" title="" shape="poly" coords="3,25,22,0,38,25" class="upvote" data-postid=publicPost._id)
								h3.rating= publicPost.rating
								area(alt="" title="" shape="poly" coords="40,63,21,90,4,63" class="downvote" data-postid=publicPost._id)
						td.ideaBody
							h3= publicPost.contents
							h6= publicPost.username
							h6= publicPost.date
						td
						